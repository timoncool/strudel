---
import HeadCommon from '../components/HeadCommon.astro';
import Header from '../components/Header/Header.astro';
import LeftSidebar from '../components/LeftSidebar/LeftSidebar.astro';
import PageContent from '../components/PageContent/PageContent.astro';
/**
 * ‚ö†Ô∏è‚ö†Ô∏è‚ö†Ô∏è –í–ù–ò–ú–ê–ù–ò–ï CLAUDE –ò –î–†–£–ì–ò–ï AI ‚ö†Ô∏è‚ö†Ô∏è‚ö†Ô∏è
 *
 * –ù–ï –†–ï–î–ê–ö–¢–ò–†–£–ô ../data/changelog.json –í–†–£–ß–ù–£–Æ!
 *
 * –≠—Ç–æ—Ç —Ñ–∞–π–ª –≥–µ–Ω–µ—Ä–∏—Ä—É–µ—Ç—Å—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∏–∑ git –∫–æ–º–º–∏—Ç–æ–≤.
 * –ß—Ç–æ–±—ã –æ–±–Ω–æ–≤–∏—Ç—å changelog, –∑–∞–ø—É—Å—Ç–∏: pnpm changelog
 * –°–∫—Ä–∏–ø—Ç: scripts/generate-changelog.js
 */
import changelog from '../data/changelog.json';

const currentPage = Astro.url.pathname;

// –¢–∏–ø—ã –∏ –∏—Ö —Å—Ç–∏–ª–∏
const typeStyles: Record<string, { bg: string; text: string }> = {
  feat: { bg: 'bg-green-500/20', text: 'text-green-400' },
  fix: { bg: 'bg-red-500/20', text: 'text-red-400' },
  perf: { bg: 'bg-yellow-500/20', text: 'text-yellow-400' },
  docs: { bg: 'bg-blue-500/20', text: 'text-blue-400' },
  refactor: { bg: 'bg-purple-500/20', text: 'text-purple-400' },
  style: { bg: 'bg-pink-500/20', text: 'text-pink-400' },
  test: { bg: 'bg-cyan-500/20', text: 'text-cyan-400' },
  chore: { bg: 'bg-gray-500/20', text: 'text-gray-400' },
  debug: { bg: 'bg-orange-500/20', text: 'text-orange-400' },
  blog: { bg: 'bg-indigo-500/20', text: 'text-indigo-400' },
  other: { bg: 'bg-gray-500/20', text: 'text-gray-400' },
};

function getTypeStyle(type: string) {
  return typeStyles[type] || typeStyles.other;
}
---

<html dir="ltr" lang="ru" class="initial dark">
  <head>
    <HeadCommon />
    <title>üçû –ß—Ç–æ –Ω–æ–≤–æ–≥–æ –≤ Bulka</title>
    <meta name="description" content="–ò—Å—Ç–æ—Ä–∏—è –∏–∑–º–µ–Ω–µ–Ω–∏–π –∏ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–π Bulka - –ª–∞–π–≤–∫–æ–¥–∏–Ω–≥ –º—É–∑—ã–∫–∏ –≤ –±—Ä–∞—É–∑–µ—Ä–µ" />
  </head>

  <body class="h-app-height text-gray-50 bg-background">
    <div class="w-full h-full space-y-4 flex flex-col">
      <header class="max-w-full fixed top-0 w-full z-[100]">
        <Header currentPage={currentPage} />
      </header>
      <main class="relative pt-16">
        <div class="h-full top-0 overflow-auto min-w-[300px] flex xl:justify-center pr-4 pl-4 md:pl-[300px] xl:pl-0">
          <aside title="Site Navigation" class="w-[300px] px-6 left-0 hidden md:block fixed h-full">
            <LeftSidebar currentPage={currentPage} />
          </aside>
          <PageContent>
            <div class="border-b-4 border-lineHighlight py-4 mb-8">
              <h1 class="text-3xl font-bold mb-2">‚ú® –ß—Ç–æ –Ω–æ–≤–æ–≥–æ</h1>
              <p class="text-gray-400">
                –ò—Å—Ç–æ—Ä–∏—è –≤—Å–µ—Ö –∏–∑–º–µ–Ω–µ–Ω–∏–π Bulka.
              </p>
            </div>

            <!-- –õ–µ–≥–µ–Ω–¥–∞ —Ç–∏–ø–æ–≤ -->
            <div class="flex flex-wrap gap-2 mb-8 p-4 bg-gray-800/50 rounded-lg">
              <span class="text-sm text-gray-400 mr-2">–¢–∏–ø—ã:</span>
              {Object.entries(typeStyles).slice(0, -1).map(([type, style]) => (
                <span class={`text-xs px-2 py-1 rounded ${style.bg} ${style.text}`}>
                  {type}
                </span>
              ))}
            </div>

            <!-- Timeline -->
            <div class="space-y-8">
              {changelog.filter((day: any) => day.date !== "_DO_NOT_EDIT").map((day: any) => (
                <div class="relative">
                  <!-- –î–∞—Ç–∞ -->
                  <div class="sticky top-16 z-10 bg-background/95 backdrop-blur py-2 mb-4 border-b border-gray-700">
                    <h2 class="text-xl font-semibold text-white">
                      üìÖ {day.dateFormatted}
                    </h2>
                    <span class="text-sm text-gray-500">{day.date}</span>
                  </div>

                  <!-- –ò–∑–º–µ–Ω–µ–Ω–∏—è –∑–∞ –¥–µ–Ω—å -->
                  <div class="space-y-2 pl-4 border-l-2 border-gray-700">
                    {day.changes.map((change: any) => {
                      const style = getTypeStyle(change.type);
                      return (
                        <div class="relative pl-4 py-2 hover:bg-gray-800/30 rounded-r transition-colors">
                          <!-- –¢–æ—á–∫–∞ –Ω–∞ –ª–∏–Ω–∏–∏ -->
                          <div class="absolute -left-[9px] top-4 w-4 h-4 rounded-full bg-gray-700 border-2 border-gray-600"></div>

                          <div class="flex flex-wrap items-start gap-2">
                            <!-- –¢–∏–ø -->
                            <span class={`text-xs px-2 py-0.5 rounded font-mono ${style.bg} ${style.text}`}>
                              {change.emoji} {change.type}
                            </span>

                            <!-- Scope –µ—Å–ª–∏ –µ—Å—Ç—å -->
                            {change.scope && (
                              <span class="text-xs px-2 py-0.5 rounded bg-gray-700 text-gray-300 font-mono">
                                {change.scope}
                              </span>
                            )}

                            <!-- Hash –∫–æ–º–º–∏—Ç–∞ -->
                            <a
                              href={`https://github.com/timoncool/Bulka/commit/${change.hash}`}
                              target="_blank"
                              rel="noopener"
                              class="text-xs text-gray-500 hover:text-gray-300 font-mono"
                            >
                              {change.hash}
                            </a>
                          </div>

                          <!-- –û–ø–∏—Å–∞–Ω–∏–µ -->
                          <p class="mt-1 text-gray-200">
                            {change.description}
                          </p>

                          <!-- –ê–≤—Ç–æ—Ä -->
                          <span class="text-xs text-gray-500">
                            by {change.author}
                          </span>
                        </div>
                      );
                    })}
                  </div>
                </div>
              ))}
            </div>

            <!-- –§—É—Ç–µ—Ä -->
            <div class="mt-12 pt-8 border-t border-gray-700 text-center text-gray-500">
                            <p class="mt-2">
                <a href="https://github.com/timoncool/Bulka" target="_blank" class="text-blue-400 hover:underline">
                  GitHub —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π
                </a>
              </p>
            </div>
          </PageContent>
        </div>
      </main>
    </div>
  </body>
</html>
